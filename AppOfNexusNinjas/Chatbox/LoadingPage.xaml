<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppOfNexusNinjas.Chatbox.LoadingPage"
             Title="Loading Page">
    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#4B0082" Offset="0"/>
                <GradientStop Color="#4169E1" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Frame CornerRadius="100" BackgroundColor="Transparent"
               BorderColor="#4169E1" HasShadow="False"
               VerticalOptions="Center" HorizontalOptions="Center"
               HeightRequest="100" WidthRequest="100">
            <Label x:Name="PercentageLabel" Text="0%" FontSize="20" 
                   TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
        </Frame>
    </Grid>
</ContentPage>

